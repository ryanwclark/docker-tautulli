#!/usr/bin/with-contenv bash

PUID=${PUID:-911}
PGID=${PGID:-911}

groupmod -o -g "$PGID" abc
usermod -o -u "$PUID" abc

echo '
----------------------------------------------------
  _____         _                           _       
 |_   _|__  ___| |__   ___ __ _ ___  __ _  (_) ___  
   | |/ _ \/ __|  _ \ / __/ _` / __|/ _` | | |/ _ \ 
   | |  __/ (__| | | | (_| (_| \__ \ (_| |_| | (_) |
   |_|\___|\___|_| |_|\___\__,_|___/\__,_(_)_|\___/ 
                                                    
----------------------------------------------------
'

echo '
-------------------------------------
GID/UID
-------------------------------------'
echo "
User uid:    $(id -u abc)
User gid:    $(id -g abc)
-------------------------------------
"
chown abc:abc /app
chown abc:abc /config
chown abc:abc /defaults
